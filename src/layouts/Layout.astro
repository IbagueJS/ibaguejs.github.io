---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@400;500;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 255, 228, 0;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #7a701a 30%, white 60%);

    --white: #FFFFFF;
    --black: #000000;

    --accent-50: #FFFAF0;
    --accent-400: #FFD680;
    --accent-500: #FFCC60;
    --accent-600: #BF9948;
    --accent-700: #806630;

    --blackAlpha-50: rgba(0, 0, 0, 0.04);
    --blackAlpha-100: rgba(0, 0, 0, 0.06);
    --blackAlpha-200: rgba(0, 0, 0, 0.08);
    --blackAlpha-700: rgba(0, 0, 0, 0.64);
    --blackAlpha-800: rgba(0, 0, 0, 0.8);

    --primary-50: #E8EDED;
    --primary-400: #416D69;
    --primary-500: #124944;
    --primary-600: #0E3733;
    --primary-700: #092522;
	}
	html {
    background-color: #F6F6F6;
	}

  body {
    margin: 0;
    font-family: 'Mukta', sans-serif;
  }

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
